!!! DOCTYPE html
%html{ lang: "en"}
  %head
    %title My Sweet App
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    = stylesheet_tag "application"

  %body
    .container
      %h1.text-center My Sweet App

    / Libraries
    = javascript_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"
    = javascript_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.2/js/bootstrap.min.js"
    = javascript_tag "//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"

    / Typekit
    - TYPEKIT_API_KEY = "ilp6fts" # Replace this with your own key
    = javascript_tag "https://use.typekit.com/#{TYPEKIT_API_KEY}.js"
    :javascript
      try{Typekit.load();}catch(e){}

    = javascript_tag "application", :expand => true
